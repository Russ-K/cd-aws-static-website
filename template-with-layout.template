            },
            "eu-west-1": {
                "S3hostedzoneID": "Z1BKCTXD74EZPE",
                "websiteendpoint": "s3-website-eu-west-1.amazonaws.com"
            },
            "eu-west-2": {
                "S3hostedzoneID": "Z3GKZC51ZF0DB4",
                "websiteendpoint": "s3-website.eu-west-2.amazonaws.com"
            },
            "ap-southeast-1": {
                "S3hostedzoneID": "Z3O0J2DXBE1FTB",
